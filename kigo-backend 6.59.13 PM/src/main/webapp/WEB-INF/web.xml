<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" 
         version="4.0">
    
    <!-- Servlet for Spotify Auth (Initiates Authentication) -->
    <servlet>
        <servlet-name>SpotifyAuthServlet</servlet-name>
        <servlet-class>com.example.kigo.SpotifyAuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SpotifyAuthServlet</servlet-name>
        <url-pattern>/spotify/auth</url-pattern>
    </servlet-mapping>

    <!-- Servlet for Spotify Callback -->
    <servlet>
        <servlet-name>SpotifyCallbackServlet</servlet-name>
        <servlet-class>com.example.kigo.SpotifyCallbackServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SpotifyCallbackServlet</servlet-name>
        <url-pattern>/spotify/callback</url-pattern>
    </servlet-mapping>
    
    <!-- Context Parameters for Client ID and Secret -->
    <context-param>
        <param-name>SPOTIFY_CLIENT_ID</param-name>
        <param-value>your_client_id</param-value>
    </context-param>
    <context-param>
        <param-name>SPOTIFY_CLIENT_SECRET</param-name>
        <param-value>your_client_secret</param-value>
    </context-param>

    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
